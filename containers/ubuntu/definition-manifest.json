{
	"variants": ["focal", "bionic"],
	"build": {
		"latest": false,
		"rootDistro": "debian",
		"tags": [
			"base:${VERSION}-${VARIANT}"
		],
		"variantTags": {
			"focal": [
				"base:${VERSION}-ubuntu-20.04",
				"base:${VERSION}-ubuntu20.04",
				"base:${VERSION}-ubuntu"
			],
			"bionic": [
				"base:${VERSION}-ubuntu-18.04",
				"base:${VERSION}-ubuntu18.04"
			]
		}
	},
	"dependencies": {
		"image": "buildpack-deps:${VARIANT}-curl",
		"imageLink": "https://hub.docker.com/_/buildpack-deps",
		"debian": [
			"apt-utils",
			"git",
			"openssh-client",
			"gnupg2",
			"iproute2",
			"procps",
			"lsof",
			"htop",
			"net-tools",
			"psmisc",
			"curl",
			"wget",
			"rsync",
			"ca-certificates",
			"unzip",
			"zip",
			"tar",
			"nano",
			"vim-tiny",
			"less",
			"jq",
			"lsb-release",
			"apt-transport-https",
			"dialog",
			"libc6",
			"libgcc1",
			"libgssapi-krb5-2",
			"libicu[0-9][0-9]",
			"liblttng-ust0",
			"libstdc++6",
			"zlib1g",
			"locales",
			"sudo",
			"ncdu",
			"man-db",
			"zsh"
		],
		"git": {
			"Oh My Zsh!": "/root/.oh-my-zsh",
			"Oh My Bash!": "/root/.oh-my-bash"
		}
	}
}
